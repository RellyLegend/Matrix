doctype
html(lang='en')
  head
    include ../includes/header.pug

    script(src='/js/sidebar.js', defer)
    script(src='/js/server.js', defer)
    link(rel='stylesheet', href='/css/sidebar.css')
  body

    #sidebarExtension
      header.text-center.pt-4
        .large-icon.bg-dark.round
          if server.info.avatar
            img.round(src=server.info.avatar, alt=server.info.name)
          else
            img.round(src="/img/Gil.png", alt=server.info.name)
        h4#overview.pt-2 #{server.info.name}
        if server.info.ownerId === user.id
          p.small #[i.fas.fa-crown.text-warning] Server Owner
        else
          p.small #[i.fas.fa-user.text-primary] Bot Manager
      hr
      .tabs.navbar-nav
        .category Modules
        a#settings.cursor-pointer #[i.fas.fa-cogs.pr-1.text-muted] Settings
      .hamburger
        p.hamburger-type.i.fas.fa-arrow-left(data-toggle='tooltip', data-placement='top', title='Go to Dashboard')

    include ../includes/navbar.pug
    
    include modules/overview
    include modules/settings